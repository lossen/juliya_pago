.photo-album
  margin: 0 auto
  margin-top: 200px
  &-item
    min-height: 250px
    border-radius: 5px;
    background-color: #d7d7d7;
    padding: 17px 6px
    display: inline-block
    text-decoration: none
    transition all 0.3s ease-out
    margin-bottom: 23px
    &:hover
      text-decoration: none
      background-color: #fff
      box-shadow 0 0 1px 3px #fff
    &-title
      font-family: PTSans;
      font-size: 18px;
      font-weight: normal;
      color: #000000;
      text-decoration: none
      margin-bottom: 13px
      text-align left
    &-image
      width: 100%;
      text-align: center
      height: 152px;
      overflow: hidden
      margin-bottom: 15px
    &-date
      text-decoration: none
      font-family: PTSans;
      font-size: 12px;
      font-weight: normal;
      color: #9b9b9b;
      text-align: left


.photo
  margin-top: 100px;
  &-item
    width: 100%
    height: 152px
    overflow: hidden
  .back-to-album
    font-family: Proxima Nova;
    font-size: 24px;
    font-weight: bold;
    color: #ffffff;


