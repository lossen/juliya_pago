//navigation to section
.fullpage-menu
  margin: 0
  padding: 0
  z-index: 9
  position: fixed
  top: 50%
  right:20px
  &-item
    display: block
    a
      display: inline-block
      width: 12px
      height: 12px
      border-radius 30px
      background: #858383
      border: 1px solid transparent
  .active
    a
      border: 1px solid $color1
//sections
.section
  background-size: cover
  &-email,&-name, &-phone
    color: #fff
    margin-top: 30px
    display: block
    font-family: PTSans;
    font-size: 16px;
  &-email
    position: relative
    margin-left: 20px
    &:hover
      color: $color1
      text-decoration: none
    &:before
      position: absolute
      top: 5px
      left: -20px
      display: inline-block
      content: ''
      sprite($email_icon)
  &-phone
    position: relative
    font-weight: bold;
    letter-spacing: -0.7px;
    &:before
      position: absolute
      top: 1px
      left: -10px
      display: inline-block
      content: ''
      sprite($contacts)
  &-icon
    &--dj
      sprite($dj_icon)
      display: inline-block
      float: right
      margin-bottom: 20px
    &--micro
      sprite($micro_icon)
      display: inline-block
      float: right
      margin-bottom: 20px
    &--singer
      sprite($singer_icon)
      display: inline-block
      float: right
      margin-bottom: 20px
    &--cooperation
      sprite($cooperation_icon)
      display: inline-block
      float: right
      margin-bottom: 20px
  &-title
    font-family: Proxima Nova;
    font-size: 72px;
    font-weight: bold;
    font-style: normal
    color: #ffffff;
    text-align: right
    text-transform: uppercase
  &-caption
    opacity: 0.5;
    font-family: PTSans;
    font-size: 16px;
    font-weight: normal;
    text-align: right;
    color: #ffffff;
    p
      padding: 10px 0
      margin: 0
  &-btn-primary
    font-family: PTSans;
    font-size: 16px;
    font-weight: normal;
    text-align: center;
    color: #ffffff;
    border-radius: 5px;
    background-color: $color1;
    border: none
    height: 39px
    outline: none
    width: 100%
    margin-top: 35px
    display: inline-block;
    line-height: 38px;
    &:hover
      background: #ad0217
      color: #fff
      text-decoration: none
  &-form
    &-input, &-textarea
      width: 100%
      height: 39px;
      border-radius: 5px;
      background-color: #ffffff;
      border: none
      margin: 9px 0
      padding: 15px
      font-family: PTSans;
      font-size: 16px;
      font-weight: normal;
      font-style: italic;
      color: #4a4a4a;
      outline: none
    &-textarea
      height: 95.3px;
      resize none
    span
      color: #D10929
      margin-left: 5px
    input:valid + label,textarea:valid + label
      display: none;
    input:focus + label,textarea:focus + label
      display: none;
    label
      display: inline-block;
      position: absolute;
      top:18px;
      cursor: pointer;
      left: 25px;
      height: 22px;
      width: 149px;
      font-family: PTSans;
      font-size: 16px;
      font-weight: normal;
      font-style: italic;
      color: #4a4a4a;
    label[for="email"]
      top: 75px

